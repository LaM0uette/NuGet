<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>Logger</RootNamespace>
        <PackageIcon>docs\log.png</PackageIcon>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>Logger</Title>
        <Description>Gestion des logs automatisés</Description>
        <Copyright>© 2022 - 2030 LaM0uette</Copyright>
        <RepositoryUrl>https://github.com/LaM0uette/NuGet</RepositoryUrl>
        <RepositoryType>Github</RepositoryType>
        <PackageTags>log, logger, logging</PackageTags>
        <PackageReleaseNotes>Ajout d un type de log par defaut lors de l appel du constructoeur</PackageReleaseNotes>
        <PackageVersion>1.1.0</PackageVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Pastel" Version="3.0.1" />
    </ItemGroup>

    <ItemGroup>
      <None Update="docs\log.png">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
      </None>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\CommonTasks\CommonTasks.csproj" />
    </ItemGroup>

</Project>
